<!-- GSAP Animations Script -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Logo glow pulse effect
    gsap.to('.logo-glow', {
      opacity: 0.8,
      duration: 1.5,
      repeat: -1,
      yoyo: true,
      ease: 'sine.inOut'
    });

    // Hero title staggered letter animation
    const heroTitle = document.querySelector('.hero-title');
    if (heroTitle) {
      const words = heroTitle.querySelectorAll('br');
      gsap.from('.hero-title', {
        opacity: 0,
        y: -30,
        duration: 0.8,
        delay: 0.1,
        ease: 'back.out'
      });
    }

    // Carousel items entrance with stagger
    gsap.from('.carousel-item', {
      opacity: 0,
      y: 30,
      duration: 0.6,
      stagger: 0.12,
      delay: 0.5,
      ease: 'back.out'
    });

    // Service cards entrance with stagger and bounce
    gsap.from('.service-card', {
      opacity: 0,
      y: 40,
      duration: 0.8,
      stagger: 0.15,
      delay: 0.3,
      ease: 'back.out'
    });

    // Feature items fade in
    gsap.from('.feature-item', {
      opacity: 0,
      x: -20,
      duration: 0.6,
      stagger: 0.1,
      delay: 0.6,
      ease: 'power2.out'
    });

    // Button hover animations
    document.querySelectorAll('.button-primary').forEach(btn => {
      btn.addEventListener('mouseenter', function() {
        gsap.to(this, {
          duration: 0.3,
          scale: 1.05,
          ease: 'power2.out'
        });
      });
      btn.addEventListener('mouseleave', function() {
        gsap.to(this, {
          duration: 0.3,
          scale: 1,
          ease: 'power2.out'
        });
      });
    });

    document.querySelectorAll('.button-secondary').forEach(btn => {
      btn.addEventListener('mouseenter', function() {
        gsap.to(this, {
          duration: 0.3,
          scale: 1.05,
          backgroundColor: 'rgba(168, 85, 247, 0.1)',
          ease: 'power2.out'
        });
      });
      btn.addEventListener('mouseleave', function() {
        gsap.to(this, {
          duration: 0.3,
          scale: 1,
          backgroundColor: 'transparent',
          ease: 'power2.out'
        });
      });
    });

    // Service card hover animations
    document.querySelectorAll('.service-card').forEach(card => {
      card.addEventListener('mouseenter', function() {
        gsap.to(this, {
          duration: 0.4,
          y: -10,
          boxShadow: '0 20px 50px rgba(168, 85, 247, 0.3)',
          ease: 'power2.out'
        });
      });
      card.addEventListener('mouseleave', function() {
        gsap.to(this, {
          duration: 0.4,
          y: 0,
          boxShadow: 'none',
          ease: 'power2.out'
        });
      });
    });

    // Carousel items hover flip effect
    document.querySelectorAll('.carousel-item').forEach((item, index) => {
      item.addEventListener('mouseenter', function() {
        gsap.to(this, {
          duration: 0.5,
          rotationY: 10,
          rotationX: -5,
          transformPerspective: 1000,
          boxShadow: '0 15px 40px rgba(168, 85, 247, 0.5)',
          ease: 'power2.out'
        });
      });
      item.addEventListener('mouseleave', function() {
        gsap.to(this, {
          duration: 0.5,
          rotationY: 0,
          rotationX: 0,
          boxShadow: 'none',
          ease: 'power2.out'
        });
      });
    });

    // ScrollTrigger animations for services section if available
    if (window.ScrollTrigger) {
      gsap.registerPlugin(ScrollTrigger);
      
      gsap.to('.services-title', {
        scrollTrigger: {
          trigger: '.services-title',
          start: 'top 80%',
          toggleActions: 'play none none none'
        },
        opacity: 1,
        duration: 0.8,
        y: 0,
        ease: 'power2.out'
      });
    }

    // Smooth page transitions with fade
    window.addEventListener('beforeunload', function() {
      gsap.to('body', {
        opacity: 0,
        duration: 0.5,
        ease: 'power2.in'
      });
    });
  });
</script>
