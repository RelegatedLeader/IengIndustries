<!-- Navigation -->
<nav style="position: fixed; top: 0; left: 0; right: 0; background: rgba(10, 15, 30, 0.98); backdrop-filter: blur(20px); padding: 1.2rem 2.5rem; z-index: 50; border-bottom: 1px solid rgba(168, 85, 247, 0.15); box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5); animation: fadeInDown 0.6s ease-out;">
  <div style="display: flex; justify-content: space-between; align-items: center; width: 100%; max-width: 1400px; margin: 0 auto;">
    <!-- Logo and Brand Container - LEFT SIDE -->
    <div style="display: flex; align-items: center; gap: 1rem;">
      <!-- Animated Logo -->
      <%= link_to root_path, style: "text-decoration: none; display: flex; align-items: center;" do %>
        <div class="logo-container" style="position: relative; width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; cursor: pointer;">
          <svg viewBox="0 0 100 100" width="50" height="50" style="filter: drop-shadow(0 0 10px rgba(168, 85, 247, 0.6));">
            <!-- Lightning Bolt Background Circle -->
            <circle cx="50" cy="50" r="45" fill="none" stroke="url(#gradientStroke)" stroke-width="2" class="logo-circle" style="filter: drop-shadow(0 0 8px rgba(168, 85, 247, 0.8));"/>
            
            <!-- Lightning Bolt -->
            <path d="M 50 15 L 65 45 L 50 45 L 70 85 L 35 50 L 50 50 Z" fill="url(#gradientFill)" class="logo-bolt" style="filter: drop-shadow(0 0 6px rgba(236, 72, 153, 0.9));"/>
            
            <!-- Gradient Definitions -->
            <defs>
              <linearGradient id="gradientFill" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#a855f7;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#ec4899;stop-opacity:1" />
              </linearGradient>
              <linearGradient id="gradientStroke" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#a855f7;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#ec4899;stop-opacity:1" />
              </linearGradient>
            </defs>
          </svg>
          
          <!-- Glow Effect -->
          <div class="logo-glow" style="position: absolute; width: 100%; height: 100%; border-radius: 50%; background: radial-gradient(circle, rgba(168, 85, 247, 0.4) 0%, transparent 70%); animation: logoPulse 2s ease-in-out infinite;"></div>
        </div>

        <!-- IENG Brand Text -->
        <h1 class="brand-name" style="font-size: 1.6rem; font-weight: 900; background: linear-gradient(135deg, #a855f7, #ec4899); -webkit-background-clip: text; -webkit-text-fill-color: transparent; text-transform: uppercase; letter-spacing: 4px; margin: 0; font-family: 'Orbitron', 'Space Mono', monospace;">
          IENG
        </h1>
      <% end %>
    </div>

    <!-- Hamburger Menu Button - Mobile Only -->
    <button class="hamburger-menu" id="hamburger-btn" style="display: none; background: none; border: none; cursor: pointer; padding: 0.5rem; z-index: 51;">
      <svg width="28" height="28" viewBox="0 0 28 28" fill="none" style="stroke: #a855f7; stroke-width: 2.5; stroke-linecap: round;">
        <line x1="4" y1="7" x2="24" y2="7" class="hamburger-line-1"></line>
        <line x1="4" y1="14" x2="24" y2="14" class="hamburger-line-2"></line>
        <line x1="4" y1="21" x2="24" y2="21" class="hamburger-line-3"></line>
      </svg>
    </button>

    <!-- Navigation Links - RIGHT SIDE (Desktop) / Dropdown (Mobile) -->
    <div class="nav-menu" id="nav-menu" style="display: flex; gap: 2.5rem; align-items: center; margin-left: auto;">
      <%= link_to "Vehicles", vehicles_path, class: "nav-link", style: "text-decoration: none; color: #cbd5e1; transition: all 0.4s; font-weight: 500; text-transform: uppercase; letter-spacing: 1px; font-size: 0.9rem;" %>
      <%= link_to "Services", root_path(anchor: "services"), class: "nav-link", style: "text-decoration: none; color: #cbd5e1; transition: all 0.4s; font-weight: 500; text-transform: uppercase; letter-spacing: 1px; font-size: 0.9rem;" %>
      <% if current_user %>
        <%= link_to "Bookings", bookings_path, class: "nav-link", style: "text-decoration: none; color: #cbd5e1; transition: all 0.4s; font-weight: 500; text-transform: uppercase; letter-spacing: 1px; font-size: 0.9rem;" %>
        <div style="display: flex; align-items: center; gap: 1.5rem; padding-left: 1.5rem; border-left: 1px solid rgba(168, 85, 247, 0.2);" class="auth-section">
          <span style="color: #cbd5e1; font-size: 0.9rem; font-weight: 500; white-space: nowrap;"><%= current_user.email %></span>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, style: "text-decoration: none; padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #ef4444, #dc2626); color: white; border-radius: 0.75rem; font-weight: 600; text-transform: uppercase; font-size: 0.85rem; letter-spacing: 1px; transition: all 0.3s; white-space: nowrap;" %>
        </div>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "nav-link sign-in-btn", style: "text-decoration: none; padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #a855f7, #ec4899); color: white; border-radius: 0.75rem; font-weight: 600; text-transform: uppercase; font-size: 0.85rem; letter-spacing: 1px; transition: all 0.3s; white-space: nowrap; display: inline-block;" %>
      <% end %>
    </div>
  </div>
</nav>

<style>
  @keyframes fadeInDown { from { opacity: 0; transform: translateY(-30px); } to { opacity: 1; transform: translateY(0); } }
  @keyframes logoPulse { 0%, 100% { opacity: 0.6; transform: scale(1); } 50% { opacity: 1; transform: scale(1.15); } }
  @keyframes logoSpin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }
  @keyframes brandGlow { 0%, 100% { text-shadow: 0 0 10px rgba(168, 85, 247, 0.5); } 50% { text-shadow: 0 0 20px rgba(168, 85, 247, 0.9), 0 0 30px rgba(236, 72, 153, 0.6); } }
  @keyframes slideDown { from { opacity: 0; transform: translateY(-20px); } to { opacity: 1; transform: translateY(0); } }
  @keyframes hamburgerTop { from { transform: rotate(0deg) translateY(0px); } to { transform: rotate(45deg) translateY(10px); } }
  @keyframes hamburgerMiddle { from { opacity: 1; } to { opacity: 0; } }
  @keyframes hamburgerBottom { from { transform: rotate(0deg) translateY(0px); } to { transform: rotate(-45deg) translateY(-10px); } }
  
  .logo-circle { animation: logoSpin 8s linear infinite; }
  .logo-bolt { animation: logoPulse 2s ease-in-out infinite; }
  .logo-glow { animation: logoPulse 2s ease-in-out infinite; }
  .brand-name { animation: brandGlow 2.5s ease-in-out infinite; }
  
  /* Mobile Menu Styles */
  .nav-menu {
    position: fixed;
    top: 80px;
    left: 0;
    right: 0;
    background: rgba(10, 15, 30, 0.98);
    backdrop-filter: blur(20px);
    flex-direction: column;
    gap: 0;
    margin-left: 0;
    padding: 2rem;
    border-bottom: 1px solid rgba(168, 85, 247, 0.15);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    max-height: calc(100vh - 80px);
    overflow-y: auto;
    transform: translateX(100%);
    transition: transform 0.3s ease;
  }
  
  .nav-menu.active {
    transform: translateX(0);
  }
  
  .nav-link {
    padding: 1rem 0 !important;
    border-bottom: 1px solid rgba(168, 85, 247, 0.1);
    display: block !important;
    text-align: left;
    animation: slideDown 0.3s ease forwards;
  }
  
  .nav-link:nth-child(1) { animation-delay: 0.05s; }
  .nav-link:nth-child(2) { animation-delay: 0.1s; }
  .nav-link:nth-child(3) { animation-delay: 0.15s; }
  
  .auth-section {
    flex-direction: column;
    gap: 1rem;
    padding-left: 0;
    border-left: none;
    padding-top: 1rem;
    border-top: 1px solid rgba(168, 85, 247, 0.1);
    width: 100%;
  }
  
  .auth-section span {
    text-align: left;
    width: 100%;
  }
  
  .sign-in-btn {
    width: 100%;
    text-align: center;
  }
  
  /* Hamburger Menu Animation */
  .hamburger-menu.active .hamburger-line-1 {
    animation: hamburgerTop 0.3s ease forwards;
  }
  
  .hamburger-menu.active .hamburger-line-2 {
    animation: hamburgerMiddle 0.3s ease forwards;
  }
  
  .hamburger-menu.active .hamburger-line-3 {
    animation: hamburgerBottom 0.3s ease forwards;
  }
  
  /* Desktop Styles */
  @media (min-width: 769px) {
    .hamburger-menu {
      display: none !important;
    }
    
    .nav-menu {
      position: static !important;
      background: none !important;
      backdrop-filter: none !important;
      top: auto !important;
      flex-direction: row !important;
      gap: 2.5rem !important;
      margin-left: auto !important;
      padding: 0 !important;
      border: none !important;
      box-shadow: none !important;
      transform: translateX(0) !important;
      max-height: none !important;
      overflow-y: visible !important;
    }
    
    .nav-link {
      padding: 0 !important;
      border: none !important;
      display: inline-block !important;
      text-align: center !important;
      animation: none !important;
    }
    
    .auth-section {
      flex-direction: row !important;
      gap: 1.5rem !important;
      padding-left: 1.5rem !important;
      border-left: 1px solid rgba(168, 85, 247, 0.2) !important;
      padding-top: 0 !important;
      border-top: none !important;
      width: auto !important;
    }
    
    .auth-section span {
      text-align: center !important;
      width: auto !important;
    }
    
    .sign-in-btn {
      width: auto !important;
      text-align: center !important;
      display: inline-block !important;
    }
  }
  
  /* Tablet Optimization (768px and below) */
  @media (max-width: 768px) {
    .hamburger-menu {
      display: block !important;
    }
  }
  
  /* Mobile Optimization (600px and below) */
  @media (max-width: 600px) {
    nav {
      padding: 1rem 1.5rem !important;
    }
    
    .logo-container {
      width: 40px !important;
      height: 40px !important;
    }
    
    .logo-container svg {
      width: 40px !important;
      height: 40px !important;
    }
    
    .brand-name {
      font-size: 1.2rem !important;
      letter-spacing: 2px !important;
    }
    
    .nav-menu {
      padding: 1.5rem !important;
    }
    
    .nav-link {
      padding: 0.8rem 0 !important;
    }
  }
</style>

<script>
  // Mobile Menu Toggle
  document.addEventListener('DOMContentLoaded', function() {
    const hamburgerBtn = document.getElementById('hamburger-btn');
    const navMenu = document.getElementById('nav-menu');
    const navLinks = document.querySelectorAll('.nav-link');
    
    // Hamburger button click to toggle menu
    if (hamburgerBtn) {
      hamburgerBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        hamburgerBtn.classList.toggle('active');
        navMenu.classList.toggle('active');
      });
    }
    
    // Close menu when clicking a nav link
    navLinks.forEach(link => {
      link.addEventListener('click', function() {
        hamburgerBtn.classList.remove('active');
        navMenu.classList.remove('active');
      });
    });
    
    // Close menu when clicking outside
    document.addEventListener('click', function(e) {
      if (navMenu && hamburgerBtn && !navMenu.contains(e.target) && !hamburgerBtn.contains(e.target)) {
        hamburgerBtn.classList.remove('active');
        navMenu.classList.remove('active');
      }
    });
    
    // Close menu on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && navMenu) {
        hamburgerBtn.classList.remove('active');
        navMenu.classList.remove('active');
      }
    });
    
    // Handle window resize
    window.addEventListener('resize', function() {
      if (window.innerWidth > 768) {
        hamburgerBtn.classList.remove('active');
        navMenu.classList.remove('active');
      }
    });
    
    // GSAP Logo Animation on Hover
    const logoContainer = document.querySelector('.logo-container');
    const brandName = document.querySelector('.brand-name');
    
    if (logoContainer) {
      logoContainer.addEventListener('mouseenter', function() {
        gsap.to('.logo-bolt', { 
          duration: 0.6, 
          scale: 1.2, 
          rotation: 360, 
          ease: 'back.out'
        });
        gsap.to('.logo-circle', {
          duration: 0.6,
          strokeWidth: 3,
          ease: 'power2.out'
        });
      });
      
      logoContainer.addEventListener('mouseleave', function() {
        gsap.to('.logo-bolt', { 
          duration: 0.6, 
          scale: 1, 
          rotation: 0,
          ease: 'back.out'
        });
        gsap.to('.logo-circle', {
          duration: 0.6,
          strokeWidth: 2,
          ease: 'power2.out'
        });
      });
    }
    
    // Brand name animation on hover
    if (brandName) {
      brandName.addEventListener('mouseenter', function() {
        gsap.to(this, {
          duration: 0.4,
          scale: 1.1,
          letterSpacing: '6px',
          ease: 'power2.out'
        });
      });
      
      brandName.addEventListener('mouseleave', function() {
        gsap.to(this, {
          duration: 0.4,
          scale: 1,
          letterSpacing: '4px',
          ease: 'power2.out'
        });
      });
    }
  });
</script>

