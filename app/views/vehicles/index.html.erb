<div style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #000 100%); min-height: 100vh; padding: 3rem 1.5rem;">
  <div style="max-width: 1200px; margin: 0 auto;">
    <h1 style="font-size: 2.25rem; font-weight: bold; color: #fff; margin-bottom: 2rem;">üöÄ Available Vehicles</h1>
    
    <!-- Filter Buttons -->
    <div style="display: flex; gap: 0.75rem; margin-bottom: 2rem; overflow-x: auto; padding-bottom: 1rem; flex-wrap: wrap;">
      <a href="<%= vehicles_path %>" style="padding: 0.5rem 1rem; background: #475569; color: #fff; border-radius: 9999px; font-weight: 600; text-decoration: none; white-space: nowrap; border: none; cursor: pointer; transition: all 0.3s;">All Vehicles</a>
      <% Vehicle.vehicle_types.keys.each do |type| %>
        <a href="<%= vehicles_path(type: type) %>" style="padding: 0.5rem 1rem; background: #475569; color: #fff; border-radius: 9999px; font-weight: 600; text-decoration: none; white-space: nowrap; border: none; cursor: pointer; transition: all 0.3s; display: inline-block;" onmouseover="this.style.background='#a855f7'" onmouseout="this.style.background='#475569'"><%= type.humanize %></a>
      <% end %>
    </div>
    
    <!-- Vehicle Grid -->
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1.5rem;">
      <% @vehicles.each do |vehicle| %>
        <div style="background: linear-gradient(to bottom right, #1e293b, #0f172a); border: 1px solid #475569; border-radius: 0.5rem; overflow: hidden; transition: all 0.3s;" onmouseover="this.style.borderColor='#a855f7';" onmouseout="this.style.borderColor='#475569';">
          
          <!-- Header with gradient -->
          <div style="background: linear-gradient(135deg, #a855f7, #ec4899); padding: 1rem; display: flex; justify-content: space-between; align-items: center;">
            <h3 style="font-size: 1.25rem; font-weight: bold; color: #fff; margin: 0;"><%= vehicle.name %></h3>
            <span style="font-size: 2rem;"><%= vehicle_icon(vehicle.vehicle_type) %></span>
          </div>
          
          <!-- Body -->
          <div style="padding: 1.5rem;">
            <!-- Vehicle Type -->
            <p style="color: #94a3b8; font-size: 0.875rem; margin-bottom: 0.5rem;">
              <span style="color: #64748b;">Type:</span>
              <span style="color: #a78bfa; font-weight: 600;"><%= vehicle.vehicle_type.humanize %></span>
            </p>
            
            <!-- Capacity -->
            <p style="color: #94a3b8; font-size: 0.875rem; margin-bottom: 0.5rem;">
              <span style="color: #64748b;">Capacity:</span>
              <span style="color: #fff; font-weight: 600;"><%= vehicle.capacity %> passengers</span>
            </p>
            
            <!-- Energy Type -->
            <p style="color: #94a3b8; font-size: 0.875rem; margin-bottom: 1rem;">
              <span style="color: #64748b;">Powered by:</span>
              <span style="color: #4ade80; font-weight: 600;">‚öõÔ∏è <%= vehicle.energy_type.humanize %></span>
            </p>
            
            <!-- Status Badge -->
            <div style="margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 1px solid #475569;">
              <% status_color = vehicle.available? ? '#10b981' : vehicle.in_transit? ? '#f59e0b' : '#ef4444' %>
              <span style="display: inline-block; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.875rem; font-weight: 600; background: <%= status_color %>; color: #fff;">
                <%= vehicle.status.humanize %>
              </span>
            </div>
            
            <!-- Price -->
            <p style="font-size: 1.5rem; font-weight: bold; color: #fff; margin-bottom: 1.5rem;">
              $<%= vehicle.hourly_rate %><span style="font-size: 0.875rem; color: #94a3b8;">/hour</span>
            </p>
            
            <!-- CTA Button -->
            <% if current_user %>
              <a href="<%= new_booking_path(vehicle_id: vehicle.id) %>" style="display: block; text-align: center; padding: 0.5rem 1rem; background: linear-gradient(135deg, #a855f7, #ec4899); color: #fff; border-radius: 0.5rem; font-weight: 600; text-decoration: none; border: none; cursor: pointer; transition: all 0.3s;" onmouseover="this.style.boxShadow='0 0 30px rgba(168, 85, 247, 0.5)'" onmouseout="this.style.boxShadow='none'">Book Now ‚Üí</a>
            <% else %>
              <a href="<%= new_user_session_path %>" style="display: block; text-align: center; padding: 0.5rem 1rem; background: linear-gradient(135deg, #a855f7, #ec4899); color: #fff; border-radius: 0.5rem; font-weight: 600; text-decoration: none; border: none; cursor: pointer; transition: all 0.3s;" onmouseover="this.style.boxShadow='0 0 30px rgba(168, 85, 247, 0.5)'" onmouseout="this.style.boxShadow='none'">Sign In to Book</a>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
