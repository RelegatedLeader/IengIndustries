<div style="background: linear-gradient(180deg, #0a0f1e 0%, #000 100%); min-height: 100vh; padding: 8rem 1.5rem 3rem;">
  <style>
    @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
    @keyframes slideInLeft { from { opacity: 0; transform: translateX(-40px); } to { opacity: 1; transform: translateX(0); } }
    @keyframes float { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-10px); } }
    .vehicle-card { animation: fadeInUp 0.7s ease-out; }
    .vehicle-card:nth-child(2) { animation-delay: 0.1s; }
    .vehicle-card:nth-child(3) { animation-delay: 0.2s; }
    .vehicle-card:nth-child(4) { animation-delay: 0.3s; }
    .vehicle-card:nth-child(5) { animation-delay: 0.4s; }
    .vehicle-card:nth-child(6) { animation-delay: 0.5s; }
  </style>

  <div style="max-width: 1400px; margin: 0 auto;">
    <h1 style="font-size: 3.5rem; font-weight: 700; color: #fff; margin-bottom: 1rem; letter-spacing: -1px; animation: fadeInUp 0.7s ease-out;">OUR FLEET COLLECTION</h1>
    <p style="font-size: 1.2rem; color: #94a3b8; margin-bottom: 3rem; animation: fadeInUp 0.7s ease-out 0.1s both;">Discover our advanced transportation solutions</p>
    
    <!-- Vehicle Grid -->
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 2.5rem;">
      <% @vehicles.each do |vehicle| %>
        <div class="vehicle-card" style="background: rgba(20, 25, 50, 0.7); border: 1.5px solid rgba(168, 85, 247, 0.2); border-radius: 1.2rem; overflow: hidden; transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1); cursor: pointer; position: relative;">
          
          <!-- Header with gradient -->
          <div style="background: linear-gradient(135deg, #a855f7, #ec4899); padding: 2rem; display: flex; justify-content: space-between; align-items: center; position: relative;">
            <div>
              <h3 style="font-size: 1.4rem; font-weight: 700; color: #fff; margin: 0;"><%= vehicle.name %></h3>
              <p style="color: rgba(255, 255, 255, 0.8); margin: 0.5rem 0 0; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 1px;"><%= vehicle.vehicle_type.humanize %></p>
            </div>
            <span style="font-size: 3rem;">üöÄ</span>
          </div>
          
          <!-- Body -->
          <div style="padding: 2.5rem;">
            <!-- Specs Grid -->
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; margin-bottom: 2rem;">
              <div>
                <p style="color: #64748b; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 0.5rem;">Capacity</p>
                <p style="color: #fff; font-weight: 700; font-size: 1.25rem;"><%= vehicle.capacity %> <span style="font-size: 0.9rem;">passengers</span></p>
              </div>
              <div>
                <p style="color: #64748b; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 0.5rem;">Energy</p>
                <p style="color: #4ade80; font-weight: 700; font-size: 1.1rem;">‚öõÔ∏è <%= vehicle.energy_type.humanize %></p>
              </div>
            </div>
            
            <!-- Status -->
            <div style="margin-bottom: 2rem; padding-bottom: 2rem; border-bottom: 1px solid rgba(168, 85, 247, 0.2);">
              <% status_color = vehicle.available? ? '#10b981' : vehicle.in_transit? ? '#f59e0b' : '#ef4444' %>
              <span style="display: inline-block; padding: 0.5rem 1rem; border-radius: 0.5rem; font-size: 0.85rem; font-weight: 700; background: <%= status_color %>; color: #fff; text-transform: uppercase; letter-spacing: 0.5px;">
                <%= vehicle.status.humanize %>
              </span>
            </div>
            
            <!-- Price -->
            <div style="margin-bottom: 2rem;">
              <p style="color: #64748b; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 0.5rem;">Rate</p>
              <p style="font-size: 1.8rem; font-weight: 700; background: linear-gradient(135deg, #a855f7, #ec4899); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                $<%= number_with_precision(vehicle.hourly_rate, precision: 2) %><span style="color: #94a3b8; font-size: 0.9rem;">/hour</span>
              </p>
            </div>
            
            <!-- CTA Button -->
            <% if current_user %>
              <a href="<%= new_booking_path(vehicle_id: vehicle.id) %>" style="display: block; text-align: center; padding: 1rem; background: linear-gradient(135deg, #a855f7, #ec4899); color: #fff; border-radius: 0.75rem; font-weight: 700; text-decoration: none; border: none; cursor: pointer; transition: all 0.4s; text-transform: uppercase; letter-spacing: 1px; font-size: 0.9rem;" onmouseover="this.style.transform='translateY(-3px)'; this.style.boxShadow='0 20px 40px rgba(168, 85, 247, 0.4)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'">üöÄ BOOK NOW</a>
            <% else %>
              <a href="<%= new_user_session_path %>" style="display: block; text-align: center; padding: 1rem; background: linear-gradient(135deg, #a855f7, #ec4899); color: #fff; border-radius: 0.75rem; font-weight: 700; text-decoration: none; border: none; cursor: pointer; transition: all 0.4s; text-transform: uppercase; letter-spacing: 1px; font-size: 0.9rem;" onmouseover="this.style.transform='translateY(-3px)'; this.style.boxShadow='0 20px 40px rgba(168, 85, 247, 0.4)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'">üîê SIGN IN TO BOOK</a>
            <% end %>
          </div>

          <!-- Hover effect overlay -->
          <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, rgba(168, 85, 247, 0.1) 0%, rgba(236, 72, 153, 0.1) 100%); opacity: 0; transition: opacity 0.4s; pointer-events: none;" onmouseover="this.style.opacity='1'" onmouseout="this.style.opacity='0'"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
