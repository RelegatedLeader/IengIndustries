<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-black py-12 px-6">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-white mb-8">Book Your Ride</h1>
    
    <form action="/bookings" method="post" class="bg-slate-800/50 border border-slate-700 rounded-lg p-8">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      
      <div class="grid grid-cols-2 gap-6 mb-6">
        <div>
          <label class="block text-slate-300 font-semibold mb-2">Vehicle Type</label>
          <select name="booking[vehicle_id]" class="w-full bg-slate-700 border border-slate-600 text-white rounded-lg p-2 focus:border-purple-500 focus:outline-none">
            <option value="">Select a vehicle...</option>
            <% @vehicles.each do |vehicle| %>
              <option value="<%= vehicle.id %>"><%= vehicle.name %> - <%= number_to_currency(vehicle.hourly_rate) %>/hr</option>
            <% end %>
          </select>
        </div>
        
        <div>
          <label class="block text-slate-300 font-semibold mb-2">Passengers</label>
          <input type="number" name="booking[passenger_count]" value="1" min="1" max="200" class="w-full bg-slate-700 border border-slate-600 text-white rounded-lg p-2 focus:border-purple-500 focus:outline-none">
        </div>
      </div>
      
      <div class="grid grid-cols-2 gap-6 mb-6">
        <div>
          <label class="block text-slate-300 font-semibold mb-2">Pickup Location</label>
          <select name="booking[pickup_location_id]" class="w-full bg-slate-700 border border-slate-600 text-white rounded-lg p-2 focus:border-purple-500 focus:outline-none">
            <option value="">Select pickup location...</option>
            <% @locations.each do |location| %>
              <option value="<%= location.id %>"><%= location.name %></option>
            <% end %>
          </select>
        </div>
        
        <div>
          <label class="block text-slate-300 font-semibold mb-2">Dropoff Location</label>
          <select name="booking[dropoff_location_id]" class="w-full bg-slate-700 border border-slate-600 text-white rounded-lg p-2 focus:border-purple-500 focus:outline-none">
            <option value="">Select dropoff location...</option>
            <% @locations.each do |location| %>
              <option value="<%= location.id %>"><%= location.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      
      <div class="grid grid-cols-2 gap-6 mb-6">
        <div>
          <label class="block text-slate-300 font-semibold mb-2">Scheduled Time</label>
          <input type="datetime-local" name="booking[scheduled_time]" class="w-full bg-slate-700 border border-slate-600 text-white rounded-lg p-2 focus:border-purple-500 focus:outline-none">
        </div>
        
        <div>
          <label class="block text-slate-300 font-semibold mb-2">Special Requests</label>
          <input type="text" name="booking[special_requests]" placeholder="E.g., Accessible vehicle needed" class="w-full bg-slate-700 border border-slate-600 text-white rounded-lg p-2 focus:border-purple-500 focus:outline-none">
        </div>
      </div>
      
      <div class="flex gap-4">
        <button type="submit" class="px-8 py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg font-semibold hover:shadow-lg hover:shadow-purple-500/50 transition-all">
          üìç Confirm Booking
        </button>
        <%= link_to "Cancel", bookings_path, class: "px-8 py-3 border border-slate-600 text-slate-300 rounded-lg font-semibold hover:border-slate-500 transition" %>
      </div>
    </form>
  </div>
</div>
