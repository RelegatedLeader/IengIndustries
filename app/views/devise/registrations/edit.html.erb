<div style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #000 100%); min-height: 100vh; padding: 3rem 1.5rem;">
  <div style="max-width: 600px; margin: 0 auto;">
    <div style="background: rgba(30, 41, 59, 0.8); border: 1px solid rgba(51, 65, 85, 0.8); border-radius: 0.5rem; padding: 2rem; backdrop-filter: blur(10px); margin-bottom: 2rem;">
      
      <!-- Header -->
      <h2 style="font-size: 1.875rem; font-weight: bold; color: #fff; margin-bottom: 0.5rem;">
        ⚙️ Account Settings
      </h2>
      <p style="color: #94a3b8; margin-bottom: 2rem;">Manage your IENG Industries account</p>

      <!-- Error Messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Form -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, local: true) do |f| %>
        <!-- Email Field -->
        <div style="margin-bottom: 1.5rem;">
          <%= f.label :email, style: "display: block; color: #cbd5e1; font-weight: 600; margin-bottom: 0.5rem;" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 0.75rem; background: #1e293b; border: 1px solid #475569; color: #fff; border-radius: 0.375rem; font-size: 1rem; box-sizing: border-box;" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div style="background: rgba(59, 130, 246, 0.1); border: 1px solid #3b82f6; border-radius: 0.375rem; padding: 1rem; margin-bottom: 1.5rem; color: #93c5fd;">
            Waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
          </div>
        <% end %>

        <!-- Password Field -->
        <div style="margin-bottom: 1.5rem;">
          <%= f.label :password, style: "display: block; color: #cbd5e1; font-weight: 600; margin-bottom: 0.5rem;" %>
          <em style="color: #94a3b8; font-size: 0.875rem;">(leave blank to keep current password)</em><br />
          <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%; padding: 0.75rem; background: #1e293b; border: 1px solid #475569; color: #fff; border-radius: 0.375rem; font-size: 1rem; box-sizing: border-box; margin-top: 0.5rem;" %>
          <% if @minimum_password_length %>
            <em style="color: #94a3b8; font-size: 0.875rem; display: block; margin-top: 0.25rem;"><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <!-- Password Confirmation Field -->
        <div style="margin-bottom: 1.5rem;">
          <%= f.label :password_confirmation, style: "display: block; color: #cbd5e1; font-weight: 600; margin-bottom: 0.5rem;" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%; padding: 0.75rem; background: #1e293b; border: 1px solid #475569; color: #fff; border-radius: 0.375rem; font-size: 1rem; box-sizing: border-box;" %>
        </div>

        <!-- Current Password Field -->
        <div style="margin-bottom: 2rem; padding-bottom: 2rem; border-bottom: 1px solid #475569;">
          <%= f.label :current_password, style: "display: block; color: #cbd5e1; font-weight: 600; margin-bottom: 0.5rem;" %>
          <em style="color: #94a3b8; font-size: 0.875rem;">(required to confirm changes)</em><br />
          <%= f.password_field :current_password, autocomplete: "current-password", style: "width: 100%; padding: 0.75rem; background: #1e293b; border: 1px solid #475569; color: #fff; border-radius: 0.375rem; font-size: 1rem; box-sizing: border-box; margin-top: 0.5rem;" %>
        </div>

        <!-- Submit Button -->
        <div style="margin-bottom: 1.5rem;">
          <%= f.submit "Update Account", style: "width: 100%; padding: 0.75rem; background: linear-gradient(135deg, #a855f7, #ec4899); color: #fff; border: none; border-radius: 0.375rem; font-weight: 600; font-size: 1rem; cursor: pointer; transition: all 0.3s;" %>
        </div>
      <% end %>
    </div>

    <!-- Danger Zone -->
    <div style="background: rgba(239, 68, 68, 0.05); border: 2px solid #dc2626; border-radius: 0.5rem; padding: 2rem;">
      <h3 style="color: #fca5a5; font-size: 1.25rem; font-weight: bold; margin-bottom: 1rem;">⚠️ Danger Zone</h3>
      <p style="color: #94a3b8; margin-bottom: 1.5rem;">Once you delete your account, there is no going back. Please be certain.</p>
      <%= button_to "Delete My Account", registration_path(resource_name), data: { turbo_confirm: "Are you absolutely sure? This action cannot be undone." }, method: :delete, style: "background: #dc2626; color: #fff; padding: 0.5rem 1rem; border: none; border-radius: 0.375rem; font-weight: 600; cursor: pointer; transition: all 0.3s;" %>
    </div>
  </div>
</div>
