<div style="background: linear-gradient(135deg, #0a0f1e 0%, #1a1f3a 50%, #2d1b4e 100%); min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 2rem;">
  <style>
    @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
    .auth-card { animation: fadeInUp 0.7s ease-out; }
    .auth-input { width: 100%; padding: 1rem; background: rgba(30, 41, 59, 0.6); border: 1.5px solid rgba(168, 85, 247, 0.2); color: #fff; border-radius: 0.75rem; font-size: 1rem; box-sizing: border-box; transition: all 0.3s; outline: none; }
    .auth-input:focus { border-color: #a855f7; background: rgba(30, 41, 59, 0.9); }
  </style>
  <div style="width: 100%; max-width: 480px;">
    <div class="auth-card" style="background: rgba(20, 25, 50, 0.8); border: 1.5px solid rgba(168, 85, 247, 0.2); border-radius: 1.2rem; padding: 3rem; backdrop-filter: blur(20px); box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);">
      
      <!-- Header -->
      <h2 style="font-size: 2rem; font-weight: 700; color: #fff; margin-bottom: 0.5rem; text-align: center; letter-spacing: -1px;">
        Welcome Back
      </h2>
      <p style="color: #94a3b8; text-align: center; margin-bottom: 2.5rem; font-size: 0.95rem;">Sign in to your IENG account</p>

      <!-- Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
        <!-- Email Field -->
        <div style="margin-bottom: 2rem;">
          <%= f.label :email, "Email Address", style: "display: block; color: #cbd5e1; font-weight: 600; margin-bottom: 0.75rem; text-transform: uppercase; letter-spacing: 0.5px; font-size: 0.85rem;" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
        </div>

        <!-- Password Field -->
        <div style="margin-bottom: 2rem;">
          <%= f.label :password, style: "display: block; color: #cbd5e1; font-weight: 600; margin-bottom: 0.75rem; text-transform: uppercase; letter-spacing: 0.5px; font-size: 0.85rem;" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "auth-input" %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div style="margin-bottom: 2rem; display: flex; align-items: center;">
            <%= f.check_box :remember_me, style: "width: 1.25rem; height: 1.25rem; cursor: pointer; margin-right: 0.75rem; accent-color: #a855f7;" %>
            <%= f.label :remember_me, style: "color: #94a3b8; cursor: pointer; font-size: 0.95rem;" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div style="margin-bottom: 2rem;">
          <%= f.submit "Sign In", style: "width: 100%; padding: 1rem; background: linear-gradient(135deg, #a855f7, #ec4899); color: #fff; border: none; border-radius: 0.75rem; font-weight: 700; font-size: 0.95rem; cursor: pointer; transition: all 0.4s; text-transform: uppercase; letter-spacing: 1px;" %>
        </div>
      <% end %>

      <!-- Links -->
      <div style="border-top: 1px solid rgba(168, 85, 247, 0.1); padding-top: 2rem; text-align: center; font-size: 0.9rem;">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
